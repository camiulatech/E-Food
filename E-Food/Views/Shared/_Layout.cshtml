@using EFood.Utilidades
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EFood.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,400&display=swap" rel="stylesheet">
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
</head>
<body>
    <header class="main-header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EFood-BackEnd</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                                @if (User.IsInRole(DS.Rol_Admin))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" to aria-haspopup="true" aria-expanded="false">
                                            Mantenimiento
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="LineaComida" asp-action="Index">Linea Comida</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Index">Producto</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="TiqueteDescuento" asp-action="Index">Tiquete Descuento</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Tarjeta" asp-action="Index">Tarjeta</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="ProcesadorPago" asp-action="Index">Procesador Pago</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="TipoPrecio" asp-action="Index">Tipo Precio</a>
                                        </div>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Consulta
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Bitacora" asp-action="Index">Bitacora</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Consultar">Consulta Producto</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Error" asp-action="Index">Errores</a>
                                        </div>
                                    </li>

                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Seguridad
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Usuario" asp-action="Index">Usuario</a>
                                        </div>
                                    </li>
                                }
                                else if (User.IsInRole(DS.Rol_Mantemiento))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Mantenimiento
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="LineaComida" asp-action="Index">Linea Comida</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Index">Producto</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="TiqueteDescuento" asp-action="Index">Tiquete Descuento</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Tarjeta" asp-action="Index">Tarjeta</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="ProcesadorPago" asp-action="Index">Procesador Pago</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="TipoPrecio" asp-action="Index">Tipo Precio</a>
                                        </div>
                                    </li>
                                }
                                else if (User.IsInRole(DS.Rol_Consulta))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Consulta
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Bitacora" asp-action="Index">Bitacora</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Consultar">Consulta Producto</a>
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Error" asp-action="Index">Errores</a>
                                        </div>
                                    </li>
                                }
                                else if (User.IsInRole(DS.Rol_Seguridad))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Seguridad
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="Admin" asp-controller="Usuario" asp-action="Index">Usuario</a>
                                        </div>
                                    </li>
                                }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre Nosotros</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            <partial name="_Notificaciones" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @if (User == null)
        {
            <div class="container">
                &copy; 2024 - EFood - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        } else
        {
            <div class="container">
                &copy; 2024 - EFood - <a asp-area="Identity" asp-page="/Account/NewPassword">Cambiar contraseña</a>
            </div>
        }
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>