@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="text-prim">Lista de Tarjetas</h1>
        </div>
    </div>

    <br />

    <div class="d-flex justify-content-between">
        <div class="p-4 border rounded bg-light mr-2">
            <h3>Tarjetas Agregadas</h3>
            <table id="tblDatos" class="table table-responsive table-hover" style="width:102%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <br />
        <div class="p-4 border rounded bg-light ml-2">
            <h3>Tarjetas Disponibles</h3>
            <table id="tblDatos1" class="table table-responsive table-hover" style="width:102%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <br />

    <div class="d-grid gap-2 d-md-block">
        <a onclick="Retroceder()" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i> Regresar </a>
    </div>
</div>

<br />

@section Scripts {
    <script src="~/js/procesadortarjeta.js"></script>

    <script>
        function Retroceder() {
            var url = window.location.href; // Obtiene la URL actual
            window.location.href = '@Url.Action("Index", "ProcesadorPago", new { area = "Admin" })';
        }
    </script>
}