@model EFood.Modelos.Usuario
@using EFood.Utilidades

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Editar Usuario";
}

<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        @if (Model.Id != null)
        {
            <input type="hidden" asp-for="Id" id="id" />
        }
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>

        <div class="form-floating mb-3">
            <select asp-for="Rol" asp-items="@(new SelectList(new[] {
                DS.Rol_Admin, DS.Rol_Seguridad, DS.Rol_Mantemiento, DS.Rol_Consulta }))">
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Estado</label>
                <div class="form-check">
                    <input type="checkbox" asp-for="Estado" class="form-check-input" />
                    <label class="form-check-label">Activo</label>
                </div>
            </div>
        </div>

        <br />
        <div>
            @if (Model.Id != null)
            {
                <partial name="_BotonesActualizarYRegresarString" model="Model.Id" />
            }
        </div>
    </div>
</form>
