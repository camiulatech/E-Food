@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-prim">Lista de Usuarios</h2>
        </div>
    </div>

    <br />

    <div class="p-4 border rounded bg-light table-responsive">
        <table id="tblDatos" class="table table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Usuario</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    <br />

    <div class="text-end">
        <a class="newbtn newbtna" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-plus-square-fill"></i> Crear Nuevo Usuario
        </a>
    </div>
</div>

<br />

<br />

@section Scripts {
    <script src="~/js/usuarios.js"></script>
}